{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Accueil{% endblock %}

{% block body %}
    {% if articles | length %}
        <div class="row pt-2">
            {% for article in articles %}
                <div class="card mb-3">

                    <img src="uploads/article_images/{{ article.image }}" class="card-img-top" alt="{{ article.image }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content }}</p>
                        <p class="card-text"><small class="text-muted">{{ article.dateUpdate|format_datetime() }}</small></p>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% else %}
        <h1 class="col-12 text-center">Aucun article publi√©</h1>
        
    {% endif %}
{% endblock %}
